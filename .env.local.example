# Environment Variables for Local Development
# Copy this file to .env.local and set your values

# ============================================
# EXISTING ENVIRONMENT VARIABLES
# ============================================

# Google Analytics (Optional)
NEXT_PUBLIC_GA_ID=

# App Metadata
NEXT_PUBLIC_APP_NAME=tickk
NEXT_PUBLIC_APP_DESCRIPTION=Free Voice Productivity App
NEXT_PUBLIC_APP_URL=https://tickk.app

# ============================================
# MONETIZATION FEATURE FLAGS
# ============================================
# Set to 'true' to enable features in development
# Leave commented or set to 'false' for production

# Master monetization switch (enables all paid features)
NEXT_PUBLIC_ENABLE_MONETIZATION=true

# Individual feature toggles
NEXT_PUBLIC_ENABLE_PRO_TIER=true
NEXT_PUBLIC_SHOW_PRICING=true
NEXT_PUBLIC_ENABLE_QUOTAS=true
NEXT_PUBLIC_ENABLE_CLOUD_BACKUP=false
NEXT_PUBLIC_ENABLE_ADVANCED_EXPORTS=true
NEXT_PUBLIC_ENABLE_ANALYTICS_DASHBOARD=false
NEXT_PUBLIC_ENABLE_STRIPE=false

# ============================================
# STRIPE CONFIGURATION (when ready)
# ============================================
# Get these from: https://dashboard.stripe.com/apikeys

# Publishable key (safe to expose in browser)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Secret key (NEVER commit this - server-side only)
STRIPE_SECRET_KEY=sk_test_...

# Stripe Price IDs (create products/prices in Stripe Dashboard)
NEXT_PUBLIC_STRIPE_PRO_MONTHLY_PRICE_ID=price_...
NEXT_PUBLIC_STRIPE_PRO_YEARLY_PRICE_ID=price_...

# Webhook secret (for Stripe webhooks)
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# USAGE QUOTAS
# ============================================
# Default limits for free tier
NEXT_PUBLIC_FREE_TIER_MAX_ITEMS=500
NEXT_PUBLIC_FREE_TIER_MAX_HISTORY_DAYS=30

# Pro tier limits (0 = unlimited)
NEXT_PUBLIC_PRO_TIER_MAX_ITEMS=0
NEXT_PUBLIC_PRO_TIER_MAX_HISTORY_DAYS=0

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Skip payment in development mode (simulate Pro subscription)
NEXT_PUBLIC_DEV_MODE_FREE_PRO=true
